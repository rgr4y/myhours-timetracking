{
  "name": "myhours",
  "version": "0.0.17",
  "description": "Cross-platform time tracking app with invoicing",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-renderer\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "start-renderer": "cd src/renderer && npm start",
    "version:bump": "node scripts/bump-version.js",
    "prisma:generate": "prisma generate",
    "prebuild": "npm run version:bump && node scripts/prepare-db.js && npm run prisma:generate && node scripts/prepare-icons.js",
    "build": "npm run build-renderer && electron-builder",
    "build-renderer": "cd src/renderer && npm run build",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.rgv.myhours.app",
    "productName": "myHours",
    "asarUnpack": [
      "node_modules/@prisma/client/**",
      "node_modules/.prisma/**",
      "node_modules/prisma/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/@prisma/client",
        "to": "node_modules/@prisma/client"
      },
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma"
      },
      {
        "from": "node_modules/@prisma/engines",
        "to": "node_modules/@prisma/engines"
      },
      {
        "from": "node_modules/prisma",
        "to": "node_modules/prisma"
      },
      {
        "from": "prisma",
        "to": "prisma"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/build/**/*",
      "node_modules/**/*",
      "!node_modules/@prisma/engines/**",
      "!node_modules/@prisma/client/**",
      "!node_modules/.prisma/**",
      "!node_modules/prisma/**",
      "!prisma/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "electron-updater": "^6.1.4",
    "handlebars": "^4.7.8",
    "prisma": "^6.15.0",
    "puppeteer-core": "^21.3.6"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "author": "Rob Vella <me@robvella.com>",
  "license": "MIT"
}
